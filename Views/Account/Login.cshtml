@model EliteSportsAcademy.ViewModel.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="relative flex flex-col items-center justify-center h-screen overflow-hidden">
    <div class="w-full p-6 bg-white border-t-4 border-gray-600 rounded-md shadow-md border-top lg:max-w-lg">
        <h1 class="text-3xl font-semibold text-center text-gray-700">Login Now!!!</h1>
        <form asp-action="Login" asp-controller="Account" method="post" class="space-y-4">
            @* <input type="hidden" asp-for="ReturnUrl" /> *@

            <!-- Email -->
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Email" placeholder="Email Address" class="w-full input input-bordered" />
                <span asp-validation-for="Email" class="text-red-500 text-xs mt-1"></span>
            </div>

            <!-- Password -->
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Password" placeholder="Enter Password" class="w-full input input-bordered" />
                <span asp-validation-for="Password" class="text-red-500 text-xs mt-1"></span>
            </div>

            <!-- Remember Me -->
            <div class="flex justify-between items-center">
                <label asp-for="RememberMe" class="inline-flex items-center">
                    <input asp-for="RememberMe" type="checkbox" class="form-checkbox h-4 w-4 text-blue-600" />
                    <span class="ml-2 text-sm text-gray-600">Remember me?</span>
                </label>

                <a href="#" class="text-xs text-gray-600 hover:underline hover:text-blue-600">Forget Password?</a>
            </div>

            <!-- Submit Button -->
            <div>
                <button type="submit" class="btn btn-block btn-primary w-full">Login</button>
            </div>
        </form>

        <div class="mt-4 text-center">
            <p class="text-xs text-gray-600">
                New Here?
                <a asp-action="Register" asp-controller="Account" class="hover:underline hover:text-blue-600">Create an account</a>
            </p>
        </div>

        <div class="mt-5 text-2xl font-semibold text-center text-gray-700">
            Social Login
        </div>
        <div class="flex justify-center gap-3 mt-2">
            <a href="#" class="btn btn-outline-primary"><i class="fab fa-facebook"></i> Facebook</a>
            <a href="#" class="btn btn-outline-danger"><i class="fab fa-google"></i> Google</a>
        </div>
    </div>
</div>