@model EliteSportsAcademy.ViewModel.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Account/_AuthLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Welcome Back!</h2>
                    <form asp-action="Login" asp-controller="Account" method="post">
                        @* <input type="hidden" asp-for="ReturnUrl" /> *@

                        <!-- Show validation summary -->
                        @* <div asp-validation-summary="All" class="text-danger mb-3"></div> *@

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" placeholder="Enter your email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" placeholder="Enter your password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <!-- Login Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>

                        <!-- Forgot Password -->
                        <div class="text-center mt-3">
                            <a href="#" class="small text-muted">Forgot your password?</a>
                        </div>

                        <!-- Divider -->
                        <div class="text-center my-3">
                            <span class="text-muted">or</span>
                        </div>

                        <!-- Social Login -->
                        <div class="d-flex justify-content-center gap-2">
                            <a href="#" class="btn btn-outline-primary" onclick="showDevelopmentAlert(event, 'Facebook')"><i class="fab fa-facebook"></i> Facebook</a>
                            <a href="#" class="btn btn-outline-danger" onclick="showDevelopmentAlert(event, 'Google')"><i class="fab fa-google"></i> Google</a>
                        </div>

                        <!-- Register -->
                        <div class="text-center mt-4">
                            <p class="small text-muted">
                                Don't have an account?
                                <a asp-action="Register" asp-controller="Account" class="text-decoration-none">Sign Up</a>
                            </p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showDevelopmentAlert(e, platform) {
            e.preventDefault();
            Swal.fire({
                icon: 'info',
                title: 'Coming Soon!',
                // text: '⚙️ Social login is under development.',
                text: '⚙️ ' + platform + ' login is under development.',
                confirmButtonText: 'Okay',
                confirmButtonColor: '#3085d6'
            });
        }
    </script>
}

