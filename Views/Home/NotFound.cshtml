
@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Main Heading -->
            <h1 class="display-1 fw-bold text-primary">404</h1>
            <h2 class="text-danger mb-4">Oops! Page Not Found</h2>

            <!-- Description -->
            <p class="lead mb-4">
                The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
            </p>

            <!-- Call-to-Action Button -->
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5">
                Return to Home
            </a>

            <a onclick="history.back()" class="btn btn-outline-secondary btn-lg rounded-pill px-5">
                Go Back
            </a>
        </div>
    </div>
</div>