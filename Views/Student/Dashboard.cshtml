@{
    Layout = "~/Views/Shared/DashBoard/_StudentLayout.cshtml";
    ViewData["Title"] = "DashBoard";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-5 text-primary">Welcome, @User.Identity!.Name!</h1>
        <p class="lead text-muted">Here's a snapshot of your learning journey at Elite Sports Academy.</p>
    </div>

    <!-- Dashboard Stats -->
    <div class="row text-center mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6>Selected Classes</h6>
                    <h3 class="text-warning">@Model.SelectedCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6>Enrolled Classes</h6>
                    <h3 class="text-success">@Model.EnrolledCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6>Available Classes</h6>
                    <h3 class="text-primary">@Model.TotalAvailableClasses</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row g-4 mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body">
                    <i class="fas fa-list-check fa-2x text-warning mb-2"></i>
                    <h6>Selected Classes</h6>
                    <a asp-action="SelectedClasses" class="btn btn-outline-warning btn-sm mt-2">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body">
                    <i class="fas fa-book fa-2x text-success mb-2"></i>
                    <h6>Enrolled Classes</h6>
                    <a asp-action="EnrolledClasses" class="btn btn-outline-success btn-sm mt-2">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body">
                    <i class="fas fa-user fa-2x text-primary mb-2"></i>
                    <h6>Profile</h6>
                    <a asp-action="Profile" class="btn btn-outline-primary btn-sm mt-2">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>


