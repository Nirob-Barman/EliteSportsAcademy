@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Main Heading -->
            <h1 class="display-1 fw-bold text-danger">Error</h1>
            <h2 class="text-secondary mb-4">An unexpected error occurred while processing your request.</h2>

            <!-- Request ID -->
            @if (Model.ShowRequestId)
            {
                <p class="lead mb-4">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <!-- Additional Information -->
            <div class="alert alert-info mt-4" role="alert">
                <h5 class="alert-heading">Development Mode</h5>
                <p>
                    Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
                </p>
                <hr>
                <p class="mb-0">
                    <strong>Note:</strong> The Development environment shouldn't be enabled for deployed applications. It can result in displaying sensitive information from exceptions to end users.
                </p>
                <p>
                    For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong> and restarting the app.
                </p>
            </div>

            <!-- Call-to-Action Button -->
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 mt-4">
                Return to Home
            </a>
        </div>
    </div>
</div>