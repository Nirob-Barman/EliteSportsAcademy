<div class="bg-light py-5">
    <div class="container">
        <!-- Heading -->
        <h2 class="text-center text-3xl font-weight-bold mb-5">News and Updates</h2>

        <!-- News Items -->
        <div class="space-y-6 md:space-y-8">
            @foreach (var item in news)
            {
                <div class="bg-white rounded-lg shadow-sm p-6 transition-transform hover-translate-y-neg-1 hover-shadow-lg">
                    <!-- Title -->
                    <h3 class="text-lg font-weight-bold mb-3">@item.Title</h3>

                    <!-- Date -->
                    <p class="text-muted mb-2">
                        Date: @DateTime.Parse(item.Date).ToString("MMMM d, yyyy")
                    </p>

                    <!-- Description -->
                    <p class="text-muted">@item.Description</p>
                </div>
            }
        </div>
    </div>
</div>