    // Fake event data (hardcoded)
    var events = new[]
    {
        new
        {
            Id = 1,
            Title = "Basketball Training Camp",
            Date = "2023-06-25",
            Time = "10:00 AM - 2:00 PM",
            Location = "Sports Complex"
        },
        new
        {
            Id = 2,
            Title = "Football Tournament",
            Date = "2023-07-10",
            Time = "8:00 AM - 6:00 PM",
            Location = "Stadium"
        },
        new
        {
            Id = 3,
            Title = "Swimming Competition",
            Date = "2023-07-18",
            Time = "1:00 PM - 4:00 PM",
            Location = "Aquatics Center"
        },
        new
        {
            Id = 4,
            Title = "Tennis Workshop",
            Date = "2023-08-05",
            Time = "9:00 AM - 12:00 PM",
            Location = "Tennis Courts"
        },
        new
        {
            Id = 5,
            Title = "Athletics Tryouts",
            Date = "2023-08-15",
            Time = "3:00 PM - 6:00 PM",
            Location = "Athletics Field"
        }
    };
}

<div class="bg-light py-5">
    <div class="container">
        <!-- Heading -->
        <h2 class="text-center text-3xl font-weight-bold mb-5">Event Calendar</h2>

        <!-- Event Cards -->
        <div class="row g-4">
            @foreach (var eventItem in events)
            {
                <div class="col-md-6">
                    <div class="card shadow-sm h-100 transition-transform hover-translate-y-neg-1">
                        <div class="card-body">
                            <!-- Title -->
                            <h3 class="card-title text-lg font-weight-bold mb-3">@eventItem.Title</h3>

                            <!-- Date -->
                            <p class="card-text text-muted mb-2">
                                Date: @DateTime.Parse(eventItem.Date).ToString("MMMM d, yyyy")
                            </p>

                            <!-- Time -->
                            <p class="card-text text-muted mb-2">
                                Time: @eventItem.Time
                            </p>

                            <!-- Location -->
                            <p class="card-text text-muted">
                                Location: @eventItem.Location
                            </p>

                            <!-- Enroll Button -->
                            <div class="d-flex justify-content-center mt-auto">
                                <button type="button"
                                        class="btn btn-primary mt-3 w-50 transition-transform hover-scale-105"
                                        data-bs-toggle="modal"
                                        data-bs-target="#enrollModal">
                                    Enroll
                                </button>
                            </div>

                            <!-- Modal -->
                            <div class="modal fade" id="enrollModal" tabindex="-1" aria-labelledby="enrollModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="enrollModalLabel">Enrollment Confirmation</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to enroll in this event?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="button" class="btn btn-primary disabled">Confirm</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>