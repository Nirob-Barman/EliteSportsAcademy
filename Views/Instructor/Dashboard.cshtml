@{
    Layout = "~/Views/Shared/DashBoard/_InstructorLayout.cshtml";
    ViewData["Title"] = "DashBoard";
}

<div class="container">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="text-primary display-4">Welcome to Your Dashboard</h1>
            <p class="lead">Manage your classes, track feedback, and update your profile.</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Add Class -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-plus-circle fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Add New Class</h5>
                    <p class="card-text">Create and submit a new class offering.</p>
                    <a asp-controller="Instructor" asp-action="AddClass" class="btn btn-outline-success">Add Class</a>
                </div>
            </div>
        </div>

        <!-- My Classes -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-list-ul fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">My Classes</h5>
                    <p class="card-text">View, edit, or track the status of your submitted classes.</p>
                    <a asp-controller="Instructor" asp-action="MyClasses" class="btn btn-outline-primary">View Classes</a>
                </div>
            </div>
        </div>

        <!-- Profile -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Your Profile</h5>
                    <p class="card-text">Update your personal and contact information.</p>
                    <a asp-controller="Instructor" asp-action="Profile" class="btn btn-outline-info">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4"></div> <!-- Optional, this div adds vertical spacing -->

    <div class="row g-4">
        <!-- Total Classes Taught -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chalkboard-teacher fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Total Classes Taught</h5>
                    <h3 class="card-text">12</h3>
                </div>
            </div>
        </div>

        <!-- Students Enrolled -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Total Students Enrolled</h5>
                    <h3 class="card-text">152</h3>
                </div>
            </div>
        </div>

        <!-- Total Revenue -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-dollar-sign fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Total Revenue</h5>
                    <h3 class="card-text">$8,500</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Row for Additional Insights (Feedback Rating, Pending Approvals, Upcoming Classes) -->
    <div class="row g-4 mt-4">
        <!-- Feedback Rating -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-star fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Feedback Rating</h5>
                    <h3 class="card-text">4.7/5</h3>
                </div>
            </div>
        </div>

        <!-- Pending Student Approvals -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-check fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Pending Student Approvals</h5>
                    <h3 class="card-text">5</h3>
                </div>
            </div>
        </div>

        <!-- Upcoming Classes -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-day fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Upcoming Classes</h5>
                    <h3 class="card-text">4</h3>
                </div>
            </div>
        </div>
    </div>
</div>
